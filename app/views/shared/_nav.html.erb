<header class="main-header">
  <nav>
    <div class="row">
      <div class="col 2">
        <p class="header-title"><h5>(App Name)</h5></p>
      </div>

      <div class="col s1 heading">
        <%= link_to "Home", root_path %>
      </div>

      <div class="col s1 heading">
        <%= link_to "Categories", categories_path %>
      </div>

      <div class="col s1 heading">
        <%= link_to "Users", users_path %>
      </div>

      <div class="col s4 right">
        <div class="nav-wrapper">
          <form>
            <div class="input-field">
              <div class="search-box">
              <input id="search" type="search" required>
              <label for="search"><i class="material-icons">search</i></label>
              <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
              </div>
            </div>
            <div class="sign-in-out-up">
              <% if signed_in? %>
                Welcome <%= current_user.name %>!
                <%= button_to "Sign Out", sign_out_path, method: :delete, class: "waves-effect waves-light btn sign-out" %>
              <% else %>
                  <%= link_to "Sign In", sign_in_path, class: "waves-effect waves-light btn sign-in" %>
                  <%= link_to "Sign Up", sign_up_path, class: "waves-effect waves-light btn sign-up" %>
              <% end %>
            </div>
          </form>
        </div>
      </div>

    </div>
  </nav>
</header>
