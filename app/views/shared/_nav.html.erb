<header class="main-header">
  <nav>
    <div class="row">
      <div class="col s2 app-title">
        <p class="header-title"><h5>(App Name)</h5></p>
      </div>

      <div class="col s3 push-1 heading-block">
        <div class="col s4 heading">
          <%= link_to "Home", root_path %>
        </div>

        <div class="col s4 heading cat">
          <%= link_to "Categories", categories_path, id: "in-nav" %>
        </div>

        <div class="col s4 heading">
          <%= link_to "Users", users_path %>
        </div>
      </div>

      <div class="col s6">
        <div class="nav-wrapper">
          <form>
            <div class="input-field col s4 offset-s2">

              <div class="search-block">
                <div class="search-box">

                  <%= form_tag search_path do %>
                    <input id="search" type="search" class="search full-width" placeholder="Search" name="query" value="">
                  <% end %>

                  <label for="search" remote=true><i class="material-icons">search</i></label>
                  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
                </div>

                <%= render "shared/search.html.erb" unless @disable_search %>

                </div>

              </div>
            </div>

            <div class="sign-in-out-up col s4 offset-s2">
              <% if signed_in? %>
                <%= link_to "Sign Out", sign_out_path, method: :delete, class: "waves-effect waves-light btn sign-butt" %>

              <% else %>
                <%= link_to "Sign In", sign_in_path, class: "waves-effect waves-light btn sign-butt" %>
                <%= link_to "Sign Up", sign_up_path, class: "waves-effect waves-light btn sign-butt" %>
              <% end %>
            </div>
          </form>
        </div>
      </div>

    </div>
  </nav>
</header>
